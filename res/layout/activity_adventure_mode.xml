<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!--  <ImageView
        android:id="@+id/adventureModeBanner"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignRight="@+id/suggestionText"
        android:layout_marginBottom="10dp"
        android:background="@drawable/adventure_mode_banner" />-->

    <Button
        android:id="@+id/filterResultsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="@string/filter_button"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/suggestionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/filterResultsButton"
        android:layout_marginBottom="10dp"
        android:background="@drawable/why_dont_you_try" />

    <ImageButton
        android:id="@+id/previousFoodButton"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/suggestionText"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="135dp"
        android:background="@drawable/previous_button" />

    <ImageView
        android:id="@+id/currentDisplayedFood"
        android:layout_width="195dp"
        android:layout_height="185dp"
        android:layout_below="@+id/suggestionText"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/nextFoodButton"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/suggestionText"
        android:layout_marginRight="8dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/next_button" />

    <ImageView
        android:id="@+id/cuisine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/previousFoodButton"
        android:background="@drawable/cuisine_text" />

    <TextView
        android:id="@+id/currentFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cuisine"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="@string/food_type"
        android:textAlignment="center"
        android:textColor="@color/dark_blue"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/currentCuisine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cuisine"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/cuisine_type"
        android:textAlignment="center"
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>