<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white">
    		<ImageView
                android:id="@+id/adventureModeBanner"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/adventure_mode_banner"
                android:layout_marginBottom="5dp"
                />
    <ImageButton
             android:id="@+id/filterResultsButton"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/filter_results_button"
             android:layout_below="@id/adventureModeBanner"
             android:layout_marginLeft="80dp"
            />
    <ImageButton
            android:id="@+id/helpButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/help_button"
            android:layout_below="@id/adventureModeBanner"
            android:layout_toRightOf="@id/filterResultsButton"
            android:layout_marginLeft="20dp"
            />
    <ImageView
            android:id="@+id/suggestionText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/why_dont_you_try"
            android:layout_below="@id/helpButton"
            android:layout_marginTop="15dp"
            />
    <ImageButton
            android:id="@+id/previousFoodButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/previous_button"
            android:layout_below="@id/suggestionText"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            />
    <ImageButton
        android:id="@+id/nextFoodButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/suggestionText"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/helpButton"
        android:background="@drawable/next_button" />
    <TextView
            android:id="@+id/currentFood"
            android:textColor="@color/dark_blue"
            android:text="@string/food_type"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/previousFoodButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:textStyle="bold"
            />
    <ImageView
            android:id="@+id/cuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cuisine_text"
            android:layout_below="@id/currentFood"
            android:layout_marginTop="5dp"
            />
    <TextView
            android:id="@+id/currentCuisine"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/cuisine_type"
            android:layout_below="@id/cuisine"
            android:layout_centerHorizontal="true"
            android:textColor="@color/dark_blue"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            />

    <ImageView
        android:id="@+id/currentDisplayedFood"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/currentFood"
        android:layout_below="@+id/suggestionText"
        android:layout_alignRight="@+id/nextFoodButton"
        android:layout_alignLeft="@+id/previousFoodButton"
        android:layout_weight="1"
        android:maxHeight="150dip"
        android:maxWidth="150dp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp" />

</RelativeLayout>