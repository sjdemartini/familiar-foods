<?xml version="1.0" encoding="utf-8"?>

<!--  * Credit: http://www.androidhive.info/2012/02/android-custom-listview-with-image-and-text/ -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >

    <!-- ListRow Left sied Thumbnail image -->

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:paddingTop="3dip" 
        android:paddingBottom="3dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dip"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="10dip" 
            android:paddingRight="5dip">

            <ImageButton
                android:id="@+id/vote_up"
                android:layout_width="23dp"
                android:layout_height="27dp"
                android:fromDegrees="0"
                android:pivotX="50%"
                android:src="@drawable/up_button"
                android:toDegrees="-90" />

            <TextView
                android:id="@+id/votes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="#10bcc9"
                android:textSize="18dip"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/vote_down"
                android:layout_width="23dp"
                android:layout_height="27dp"
                android:fromDegrees="0"
                android:pivotX="50%"
                android:src="@drawable/down_button"
                android:toDegrees="-90" />

        </LinearLayout>

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="73dip"
            android:layout_height="77dip"
            android:background="@drawable/image_bg"
            android:src="@drawable/logo" />
    </LinearLayout>

    <!-- Title Of Song -->

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:ellipsize="end"
        android:lines="1"
        android:text="Samosas"
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- Description -->

    <TextView
        android:id="@+id/description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="1dip"
        android:layout_toLeftOf="@+id/imageView1"
        android:layout_toRightOf="@+id/thumbnail"
        android:ellipsize="end"
        android:lines="4"
        android:text="super long descriptoin to test the ellipsis thingy majitadsfh aewoijf daiojfs dfhuasildfh ew;ocfj awoiafiaskfhksdjf asjd f;lksjd f;oahwe;ofiawieojefwo wu "
        android:textColor="#343434"
        android:textSize="10dip" />

</RelativeLayout>