<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <ImageView
            android:id="@+id/addFoodBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_new_food_banner"
            android:layout_marginBottom="10dp"
            />

    <ImageView
            android:id="@+id/addPictureIcon"
            android:layout_height="32dp"
            android:layout_width="35dp"
            android:background="@drawable/camera_icon"

            android:layout_alignRight="@+id/cuisineSpinner"
            android:layout_alignBottom="@+id/addPicture"/>

    <ImageView
        android:id="@+id/descriptors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/addPicture"
        android:layout_marginTop="32dp"
        android:background="@drawable/description_text" />

   <ScrollView
            android:id="@+id/addFoodScrollView"
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:layout_below="@id/descriptors"
            android:background="@color/gray"
            >

       <LinearLayout
           android:id="@+id/descriptorll"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical" >
       </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/addPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/foodNameAddFood"
        android:layout_below="@+id/foodNameAddFood"
        android:layout_marginTop="16dp"
        android:background="@drawable/add_picture_text" />

    <ImageView
        android:id="@+id/cuisineAddFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/cuisineSpinner"
        android:layout_marginLeft="14dp"
        android:background="@drawable/cuisine_text_no_background" />

    <ImageView
        android:id="@+id/foodNameAddFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/foodNameEditText"
        android:layout_alignLeft="@+id/cuisineAddFood"
        android:background="@drawable/food_name_add_food_text" />

    <EditText
        android:id="@+id/foodNameEditText"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignRight="@+id/addPictureIcon"
        android:layout_below="@+id/cuisineSpinner"
        android:textAlignment="viewEnd"
        android:ems="10" />

    <ImageButton
        android:id="@+id/doneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addFoodScrollView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/done_button" />

    <Spinner
        android:id="@+id/cuisineSpinner"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/addFoodBanner"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/addPicture" />

</RelativeLayout>