<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/FamiliarFoodsBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/familiar_foods_banner"
        android:layout_marginBottom="5dp" />

    <AutoCompleteTextView
        android:id="@+id/SearchBar"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@id/FamiliarFoodsBanner"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/search_view"
        android:ems="10"
        android:gravity="left"
        android:hint="@string/search_food_hint"
        android:imeOptions="actionDone"
        android:padding="10dp"
        android:textColorHint="@color/white" />

    <ImageButton
        android:id="@+id/LinkFoodsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/SearchBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/link_foods_button" />

    <TextView
        android:id="@+id/LinkFoodText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LinkFoodsButton"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/link_food"
        android:textAlignment="center"
        android:textColor="@color/dark_gray"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/AddNewFoodButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LinkFoodText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/add_new_food_button" />

    <TextView
        android:id="@+id/AddFoodText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/AddNewFoodButton"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/add_food"
        android:textAlignment="center"
        android:textColor="@color/dark_gray"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/AdventureModeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/AddFoodText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/adventure_mode_button" />

    <TextView
        android:id="@+id/AdventureModeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/AdventureModeButton"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/adventure_mode"
        android:textAlignment="center"
        android:textColor="@color/dark_gray"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>

